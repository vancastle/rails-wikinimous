<h1 style="text-align: center; color: #333; font-family: 'Roboto Slab', serif; font-size: 3em;"><strong>Articles</strong></h1>

<!-- Include Google Fonts link for Roboto Slab -->
<link href="https://fonts.googleapis.com/css2?family=Roboto+Slab:wght@400;700&display=swap" rel="stylesheet">

<div style="text-align: center;">
  <ul style="list-style-type: none; padding: 0; display: inline-block; text-align: left;">
    <% @articles.each do |article| %>
      <li style="margin-bottom: 20px; display: flex; justify-content: space-between; align-items: center;">
        <div style="flex-grow: 1; margin-right: 20px;">
          <%= link_to article.title, article_path(article), style: 'font-weight: 400; color: #007bff; font-size: 2em; font-family: "Roboto Slab", serif; text-decoration: none;' %>
        </div>
        <div style="display: flex; align-items: center; gap: 10px;">
          <%= link_to 'Edit', edit_article_path(article), class: 'btn btn-secondary' %>
          <%= link_to 'Delete', article, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        </div>
      </li>
    <% end %>
  </ul>
  <div style="text-align: center;">
    <%= link_to 'Add new article', new_article_path, class: 'btn btn-primary', style: 'margin-bottom: 20px; display: inline-block;' %>
  </div>
</div>
